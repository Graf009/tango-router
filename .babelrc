{
  "plugins": ["transform-runtime"],

  "env": {
    "commonjs": {
      "presets": [
        ["es2015", { "loose": true, "modules": "commonjs" }],
        "stage-0"
      ],
      "plugins": [
        "transform-decorators-legacy",
        "add-module-exports"
      ]
    },

    "es": {
      "presets": [
        ["es2015", { "loose": true, "modules": false }],
        "stage-0"
      ],
      "plugins": ["transform-decorators-legacy"]
    }
  }
}
